<Window x:Class="PowerfulWizard.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker" 
        Height="400" Width="500"
        Icon="favicon.ico"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Color Picker" FontSize="18" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Instructions -->
        <TextBlock Grid.Row="1" Text="Click the 'Pick Color from Screen' button, then click anywhere on the screen to select a color." 
                   Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Color Preview -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" Content="Selected Color:" Foreground="White" VerticalAlignment="Center"/>
            <Border Grid.Column="1" x:Name="ColorPreviewBorder" Background="Red" BorderBrush="White" 
                    BorderThickness="2" Width="100" Height="30" Margin="10,0,0,0"/>
        </Grid>
        
        <!-- Color Values -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" Content="R:" Foreground="White" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="RedValueTextBox" Text="255" Margin="5,0,10,0" 
                     Background="#333333" Foreground="White" BorderBrush="#555555"
                     PreviewTextInput="OnPreviewTextInput" MaxLength="3"/>
            
            <Label Grid.Column="2" Content="G:" Foreground="White" VerticalAlignment="Center"/>
            <TextBox Grid.Column="3" x:Name="GreenValueTextBox" Text="0" Margin="5,0,10,0" 
                     Background="#333333" Foreground="White" BorderBrush="#555555"
                     PreviewTextInput="OnPreviewTextInput" MaxLength="3"/>
            
            <Label Grid.Column="4" Content="B:" Foreground="White" VerticalAlignment="Center"/>
            <TextBox Grid.Column="5" x:Name="BlueValueTextBox" Text="0" Margin="5,0,0,0" 
                     Background="#333333" Foreground="White" BorderBrush="#555555"
                     PreviewTextInput="OnPreviewTextInput" MaxLength="3"/>
        </Grid>
        
        <!-- Tolerance -->
        <Grid Grid.Row="4" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" Content="Color Tolerance:" Foreground="White" VerticalAlignment="Center"/>
            <Slider Grid.Column="1" x:Name="ToleranceSlider" Minimum="0" Maximum="255" Value="30" 
                    Margin="10,0,10,0" VerticalAlignment="Center"/>
            <Label Grid.Column="2" x:Name="ToleranceValueLabel" Content="30" Foreground="White" 
                   VerticalAlignment="Center" MinWidth="30"/>
        </Grid>
        
        <!-- Tolerance Description -->
        <TextBlock Grid.Row="5" Text="Lower values = exact color match, Higher values = more flexible matching" 
                   Foreground="Gray" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="11"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="PickColorButton" Content="Pick Color from Screen" Width="150" Height="35" 
                    Margin="5" Background="#333333" Foreground="White" BorderBrush="#555555" 
                    Click="OnPickColorClick"/>
            <Button x:Name="OKButton" Content="OK" Width="80" Height="35" 
                    Margin="5" Background="#007ACC" Foreground="White" BorderBrush="#007ACC" 
                    Click="OnOKClick"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="35" 
                    Margin="5" Background="#333333" Foreground="White" BorderBrush="#555555" 
                    Click="OnCancelClick"/>
        </StackPanel>
    </Grid>
</Window>

