<Window x:Class="PowerfulWizard.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PowerfulWizard"
        Title="{x:Static local:VersionInfo.SettingsTitle}" Height="600" Width="400" ResizeMode="CanMinimize"
        Background="#1E1E1E" PreviewMouseDown="OnWindowPreviewMouseDown">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="50"/>
        </Style>
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Hotkeys section header -->
        <Label Content="Hotkeys" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource LabelStyle}" FontWeight="Bold" FontSize="16" Margin="0,0,0,2"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Click to set hotkey" Foreground="#AAAAAA" FontSize="12" VerticalAlignment="Center"/>
            <TextBlock x:Name="HotkeyWaitingText" Text=" â€” Waiting for hotkey..." Foreground="#7FBF7F" FontSize="12" VerticalAlignment="Center" Visibility="Collapsed" Margin="8,0,0,0"/>
        </StackPanel>

        <Label Content="Start Hotkey:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <TextBox x:Name="StartHotkeyInput" Grid.Row="2" Grid.Column="1" MinWidth="180" IsReadOnly="True" Style="{StaticResource TextBoxStyle}" KeyDown="OnHotkeyInputKeyDown" GotFocus="OnHotkeyInputGotFocus" LostFocus="OnHotkeyInputLostFocus" ToolTip="Click here, then press key or mouse button"/>

        <Label Content="Stop Hotkey:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}" Margin="0,10,0,5"/>
        <TextBox x:Name="StopHotkeyInput" Grid.Row="3" Grid.Column="1" MinWidth="180" IsReadOnly="True" Style="{StaticResource TextBoxStyle}" KeyDown="OnHotkeyInputKeyDown" GotFocus="OnHotkeyInputGotFocus" LostFocus="OnHotkeyInputLostFocus" ToolTip="Click here, then press key or mouse button"/>

        <!-- Mouse Trail Settings -->
        <Label Content="Mouse Trail Settings:" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource LabelStyle}" Margin="0,20,0,5" FontWeight="Bold"/>
        
        <Label Content="Enable Mouse Trails:" Grid.Row="5" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <CheckBox x:Name="EnableMouseTrailsCheck" Grid.Row="5" Grid.Column="1" Style="{StaticResource CheckBoxStyle}" HorizontalAlignment="Left" Margin="5"/>
        
        <Label Content="Trail Length:" Grid.Row="6" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="TrailLengthInput" Style="{StaticResource TextBoxStyle}" Width="60"/>
            <Label Content="positions" Style="{StaticResource LabelStyle}" Margin="5,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Label Content="Trail Fade Speed:" Grid.Row="7" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="TrailFadeSpeedInput" Style="{StaticResource TextBoxStyle}" Width="60"/>
            <Label Content="ms" Style="{StaticResource LabelStyle}" Margin="5,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Label Content="Rainbow Trail:" Grid.Row="8" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <CheckBox x:Name="RainbowTrailCheck" Grid.Row="8" Grid.Column="1" Style="{StaticResource CheckBoxStyle}" HorizontalAlignment="Left" Margin="5" Checked="OnRainbowTrailChanged" Unchecked="OnRainbowTrailChanged"/>
        
        <Label Content="Trail Color:" Grid.Row="9" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <Button x:Name="TrailColorButton" Grid.Row="9" Grid.Column="1" Content="Color: Cyan" Style="{StaticResource ButtonStyle}" Width="120" Height="25" HorizontalAlignment="Left" Margin="5" Click="OnTrailColorButtonClick"/>
        
        <!-- Click Validation Settings -->
        <Label Content="Click Validation Settings:" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource LabelStyle}" Margin="0,20,0,5" FontWeight="Bold"/>
        
        <Label Content="Enable Click Validation:" Grid.Row="11" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <CheckBox x:Name="EnableClickValidationCheck" Grid.Row="11" Grid.Column="1" Style="{StaticResource CheckBoxStyle}" HorizontalAlignment="Left" Margin="5"/>
        
        <Label Content="Validation Area Size:" Grid.Row="12" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <StackPanel Grid.Row="12" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="ValidationAreaSizeInput" Style="{StaticResource TextBoxStyle}" Width="60" Text="50" Margin="0,0,10,0"/>
            <Label Content="pixels" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Button Content="Save" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Width="80" Height="30" Style="{StaticResource ButtonStyle}" Click="OnSaveButtonClick" HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Window>