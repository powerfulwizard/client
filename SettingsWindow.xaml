<Window x:Class="PowerfulWizard.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PowerfulWizard"
        Title="{x:Static local:VersionInfo.SettingsTitle}" Height="500" Width="400" ResizeMode="CanMinimize"
        Background="#1E1E1E">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="50"/>
        </Style>
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Start Hotkey:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <TextBox x:Name="StartHotkeyInput" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBoxStyle}" KeyDown="OnHotkeyInputKeyDown"/>

        <Label Content="Start Modifiers:" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}" Margin="0,10,0,5"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5,10,0,5">
            <CheckBox x:Name="StartCtrlCheck" Content="Ctrl" Style="{StaticResource CheckBoxStyle}"/>
            <CheckBox x:Name="StartShiftCheck" Content="Shift" Style="{StaticResource CheckBoxStyle}"/>
            <CheckBox x:Name="StartAltCheck" Content="Alt" Style="{StaticResource CheckBoxStyle}"/>
        </StackPanel>

        <Label Content="Stop Hotkey:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}" Margin="0,10,0,5"/>
        <TextBox x:Name="StopHotkeyInput" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBoxStyle}" KeyDown="OnHotkeyInputKeyDown"/>

        <Label Content="Stop Modifiers:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}" Margin="0,10,0,5"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="5,10,0,5">
            <CheckBox x:Name="StopCtrlCheck" Content="Ctrl" Style="{StaticResource CheckBoxStyle}"/>
            <CheckBox x:Name="StopShiftCheck" Content="Shift" Style="{StaticResource CheckBoxStyle}"/>
            <CheckBox x:Name="StopAltCheck" Content="Alt" Style="{StaticResource CheckBoxStyle}"/>
        </StackPanel>

        <!-- Mouse Trail Settings -->
        <Label Content="Mouse Trail Settings:" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource LabelStyle}" Margin="0,20,0,5" FontWeight="Bold"/>
        
        <Label Content="Enable Mouse Trails:" Grid.Row="5" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <CheckBox x:Name="EnableMouseTrailsCheck" Grid.Row="5" Grid.Column="1" Style="{StaticResource CheckBoxStyle}" HorizontalAlignment="Left" Margin="5"/>
        
        <Label Content="Trail Length:" Grid.Row="6" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="TrailLengthInput" Style="{StaticResource TextBoxStyle}" Width="60"/>
            <Label Content="positions" Style="{StaticResource LabelStyle}" Margin="5,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Label Content="Trail Fade Speed:" Grid.Row="7" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="TrailFadeSpeedInput" Style="{StaticResource TextBoxStyle}" Width="60"/>
            <Label Content="ms" Style="{StaticResource LabelStyle}" Margin="5,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Label Content="Rainbow Trail:" Grid.Row="8" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <CheckBox x:Name="RainbowTrailCheck" Grid.Row="8" Grid.Column="1" Style="{StaticResource CheckBoxStyle}" HorizontalAlignment="Left" Margin="5" Checked="OnRainbowTrailChanged" Unchecked="OnRainbowTrailChanged"/>
        
        <Label Content="Trail Color:" Grid.Row="9" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <Button x:Name="TrailColorButton" Grid.Row="9" Grid.Column="1" Content="Color: Cyan" Style="{StaticResource ButtonStyle}" Width="120" Height="25" HorizontalAlignment="Left" Margin="5" Click="OnTrailColorButtonClick"/>
        
        <Button Content="Save" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Width="80" Height="30" Style="{StaticResource ButtonStyle}" Click="OnSaveButtonClick" HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Window>